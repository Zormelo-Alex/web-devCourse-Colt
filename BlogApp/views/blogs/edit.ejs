<%- include('../partials/header') -%>

<div class="ui main text container segment">
    <div class="ui huge header">Edit "<%= blog.title %>"</div>
    <form class="ui form" action="/blogsUpdate/<%= blog._id %>" method="post">
    <div class="field" >
        <label>Title</label>
        <input type="text" name="blog[title]" placeholder="title" value="<%= blog.title %> ">
    </div>
    <div class="field">
        <label>Image url</label>
        <input type="text" name="blog[image]" placeholder="image url" value="<%= blog.image %> ">
    </div>
    <div class="field">
        <label>Blog content</label>
        <textarea name="blog[post]" id="" cols="30" rows="10" placeholder="Enter text here!"><%= blog.post %></textarea>
    </div>
    <div><input class="ui violet basic button" type="submit" value="Update"></div>
</form>
</div>

<%- include('../partials/footer') -%>