<%- include("../partials/header") -%> 

    <title>Comment</title>
    <%- include("../partials/nav") -%> 
    
    <div class="container">
        <div class="row">
            <h1 style="text-align: center;">Add a comment to <%= campground.name  %> </h1>
            <div style="width: 30%; margin: 35px auto;">
                <form action="/campgrounds/<%= campground._id %>/comments " method="post">
                    <div class="form-group"><input class="form-control" type="text" placeholder="Comment" name="content" ></div>
                    <div class="form-group"><input class="btn btn-lg btn-block btn-primary" type="submit" value="submit!"></div>
                </form>
            </div>
            <a href="/campgrounds/<%= campground._id %> ">Go Back</a>
        </div>
        
    </div>
    
