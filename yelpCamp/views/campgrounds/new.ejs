<%- include("../partials/header") -%> 

    <title>Add camp site</title>
    <%- include("../partials/nav") -%> 
    
    <div class="container">
        <div class="row">
            <h1 style="text-align: center;">Add new camp site</h1>
            <div style="width: 30%; margin: 35px auto;">
                <form action="/campGrounds" method="post">
                    <div class="form-group"><input class="form-control" type="text" placeholder="name" name="name" required></div>
                    <div class="form-group"><input class="form-control" type="text" placeholder="image url" name="image" required></div>
                    <div class="form-group"><input class="form-control" type="number" placeholder="Price per night" name="price" required></div>
                    <div class="form-group"><textarea name="disc" class="form-control" cols="30" rows="10" placeholder="Description"></textarea></div>
                    <div class="form-group"><input class="btn btn-lg btn-block btn-primary" type="submit" value="submit!"></div>
                </form>
            </div>
            <a href="/">Go Back</a>
        </div>
        
    </div>
    
<%- include("../partials/footer") -%> 