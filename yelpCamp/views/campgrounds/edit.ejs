<%- include("../partials/header") -%> 

    <title>Edit camp site</title>
    <%- include("../partials/nav") -%> 
    
    <div class="container">
        <div class="row">
            <h1 style="text-align: center;">Edit <%= camp.name %> </h1>
            <div style="width: 30%; margin: 35px auto;">
                <form action="/campGrounds/<%= camp._id %>/update" method="post">
                    <div class="form-group"><input class="form-control" type="text" placeholder="name" name="name" value="<%= camp.name %> " required></div>
                    <div class="form-group"><input class="form-control" type="text" placeholder="image url" name="image" value="<%= camp.img %> " required></div>
                    <div class="form-group"><input class="form-control" type="number" placeholder="Price per night" name="price" value="<%= camp.price %> " required></div>
                    <div class="form-group"><textarea name="disc" class="form-control" cols="30" rows="10" placeholder="Description"><%= camp.description %> </textarea></div>
                    <div class="form-group"><input class="btn btn-lg btn-block btn-primary" type="submit" value="Update"></div>
                </form>
            </div>
            <a href="/">Go Back</a>
        </div>
        
    </div>
    
<%- include("../partials/footer") -%> 